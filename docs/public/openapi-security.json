{
  "openapi": "3.0.0",
  "info": {
    "title": "Example of an OpenAPI document with security",
    "version": "1.0.0",
    "description": "This is an example of an OpenAPI document with security definitions and security requirements."
  },
  "servers": [
    {
      "url": "https://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/onlyApiKey": {
      "get": {
        "operationId": "onlyApiKey",
        "security": [
          {
            "apiKey": []
          }
        ]
      }
    },
    "/onlyBearerAuth": {
      "post": {
        "operationId": "onlyBearerAuth",
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/apiKeyAndBearerAuth": {
      "put": {
        "operationId": "apiKeyAndBearerAuth",
        "security": [
          {
            "apiKey": [],
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "headerParam",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Header parameter description",
            "example": "value"
          }
        ]
      }
    },
    "/apiKeyOrBearerAuth/{pathParam}": {
      "get": {
        "operationId": "apiKeyOrBearerAuth",
        "security": [
          {
            "apiKey": []
          },
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "pathParam",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Path parameter description"
          }
        ]
      }
    },
    "/noSecurity": {
      "get": {
        "operationId": "noSecurity",
        "security": []
      }
    },
    "/multipleSecurity/{pathParam}": {
      "post": {
        "operationId": "multipleSecurity",
        "security": [
          {
            "apiKey": [],
            "bearerAuth": []
          },
          {
            "basicAuth": [],
            "internalApiKey": []
          }
        ],
        "parameters": [
          {
            "name": "param1",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "value1",
                "value2"
              ],
              "default": "value1"
            },
            "description": "Query parameter description"
          },
          {
            "name": "param2",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Another query parameter description"
          },
          {
            "name": "pathParam",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Path parameter description"
          }
        ],
        "requestBody": {
          "description": "Request body description",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prop1": {
                    "type": "string"
                  },
                  "prop2": {
                    "type": "number"
                  },
                  "prop3": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "description": "Array of strings",
                      "example": [
                        "value1",
                        "value2"
                      ]
                    }
                  }
                }
              },
              "example": {
                "prop1": "value1"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      },
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      },
      "basicAuth": {
        "type": "http",
        "scheme": "basic",
        "description": "Basic authentication with username and password"
      },
      "internalApiKey": {
        "type": "apiKey",
        "name": "internal_api_key",
        "in": "header",
        "description": "Internal API key for special customers",
        "example": "special-key"
      }
    }
  }
}
